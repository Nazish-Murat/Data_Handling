#Q4 Compute Area
r= input ("Enter Radius :")
r= float (r)
a= 3.14 * r * r
print ("Area is : ", a)

#Q5 Display Names in Reverse order
a= input ("Enter fist name : ")
b= input ("Enter second name : ")
print ("Reverse name : " ,b ,'',a)
a= input ("Enter fist number : ")
b= input ("Enter second number : ")
a= int (a)
b= int (b)
c= a+b
print ("Sum is : ",c)
